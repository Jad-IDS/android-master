<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_margin"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/bg_block_white_no_border"


            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:id="@+id/linearMarkazRobot"
            android:orientation="vertical"
            >




        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ivMarkazRobotLogo"
                android:src="@drawable/img_01"
                android:layout_gravity="center"


                />

        <com.ids.markaz.custom.CustomTextViewLite
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Knowledge power your assets"
                android:textColor="@color/gray_text_dark"
                android:textSize="@dimen/very_big_font"
                android:layout_gravity="center"
                android:gravity="center"
                />


        <com.ids.markaz.custom.CustomTextViewLite
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/second_margin"

                android:text="Award winning investment services since 1974"
                android:textColor="@color/gray_text_light"
                android:textSize="@dimen/big_font"
                android:layout_gravity="center"
                android:gravity="center"
                />



    </LinearLayout>

</LinearLayout>